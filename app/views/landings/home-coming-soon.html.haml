%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %title Mazel - Multiprapose Html template
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "keywords"}/
    %meta{:content => "nileforest", :name => "author"}/
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0", :name => "viewport"}/
    /[if IE] <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'>
    / Favicone Icon
    %link{:href => "img/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/
    %link{:href => "img/favicon.png", :rel => "icon", :type => "image/png"}/
    %link{:href => "img/favicon.png", :rel => "apple-touch-icon"}/
    / CSS
    %link{:href => "css/style.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "css/bootstrap.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "css/font-awesome.css", :rel => "stylesheet", :type => "text/css"}/
    :css
      /* NOTE : This is Css To Only CommingSoon Page */
      body {
          color: white;
          background: #323232;
      }

      .header-bar {
          position: absolute;
          width: 100%;
          padding: 30px 0;
          z-index: 2;
      }

          .header-bar a {
              color: #fff;
          }

      .logo span {
          display: inline-block;
      }

      /* counter clock css */
      ul.countdown {
          list-style: none;
          padding: 0;
          display: block;
          text-align: center;
          font-family: 'arial', sans-serif !important;
      }

          ul.countdown li {
              display: inline-block;
          }

              ul.countdown li span {
                  font-size: 80px;
                  font-weight: 300;
                  line-height: 80px;
              }

              ul.countdown li.seperator {
                  font-size: 80px;
                  line-height: 70px;
                  vertical-align: top;
              }

              ul.countdown li p {
                  color: #a7abb1;
                  font-size: 14px;
              }
      /* emd counter clock css */

      .call-email-text {
          text-align: right;
      }

          .call-email-text span {
              display: inline-block;
          }

              .call-email-text span.paddi-md-right25 {
                  padding-right: 25px;
              }

      @media (max-width: 767px) {
          .call-email-text {
              text-align: center;
          }

              .call-email-text span {
                  display: block;
              }

                  .call-email-text span.paddi-md-right25 {
                      padding-right: 0px;
                  }

          .text-center-xs {
              text-align: center;
          }
      }
  %body.full-intro.background--dark
    .wrapper
      %section.header-bar
        .container
          .row.text-center-xs
            .col-md-3.col-sm-4.mb-xs-30
              .logo
                %span
                  %img.l-white{:src => "img/logo-white.png"}/
            .col-md-9.col-sm-8
              .call-email-text
                %span.paddi-md-right25
                  %a
                    %i.fa.fa-envelope.left
                    %b yourname@domain.com
                %span
                  %a
                    %i.fa.fa-phone.left
                    %b +40 (0) 012 345 6789
      / Intro Section
      %section.full-screen-intro.bg-img21
        / Content
        .full-cap-wraper.overlay-dark80.light-color
          .content-caption.light-color
            .container
              %h1 Coming Soon
              %p.lead We're currently working on creating something fantastic, We'll be here soon.
              %br/
              %br/
              %ul.countdown
                %li
                  %span.days 00
                  %p.days_ref days
                %li.seperator .
                %li
                  %span.hours 00
                  %p.hours_ref hours
                %li.seperator :
                %li
                  %span.minutes 00
                  %p.minutes_ref minutes
                %li.seperator :
                %li
                  %span.seconds 00
                  %p.seconds_ref seconds
        / End Content
      / End Intro Section
    %script{:src => "js/jquery-1.11.2.min.js", :type => "text/javascript"}
    %script{:src => "js/plugin/jquery.downCount.js", :type => "text/javascript"}
    :javascript
      $('.countdown').downCount({
          date: '06/29/2015 12:00:00',
          offset: +10
      }, function () {
          alert('WOOT WOOT, done!');
      });
    :javascript
      $(document).ready(function () {
          headerResize();
      });

      $(window).resize(function () {
          headerResize();
      })

      function headerResize() {
          var winWidthMd = $(window).height();
          if ($(window).width() > 767) {
              // alert('deskstop');
              $('.full-screen-intro').css({ "height": winWidthMd, "padding": "0px 0px" });
          }
          else {
              $('.full-screen-intro').css({ "height": "600px", "padding": "400px 0px" });
          };

      };
